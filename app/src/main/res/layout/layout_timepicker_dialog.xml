<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="집중 시간"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/set_focus_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/set_focus_min"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/time_picker_dialog_text_area"
            android:gravity="center"
            android:inputType="datetime"
            android:maxLength="2"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <EditText
            android:id="@+id/set_focus_sec"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/time_picker_dialog_text_area"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="60dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="휴식 시간"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/set_refresh_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/set_refresh_min"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/time_picker_dialog_text_area"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text=":"
            android:textColor="@color/white"
            android:textSize="60dp" />

        <EditText
            android:id="@+id/set_refresh_sec"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/time_picker_dialog_text_area"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="60dp" />

    </LinearLayout>

</LinearLayout>